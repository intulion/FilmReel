<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieTitleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="MovieSubtitleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/grey_60</item>
    </style>

    <style name="MovieCaptionTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

</resources>

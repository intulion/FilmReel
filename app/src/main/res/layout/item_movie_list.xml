<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:paddingStart="@dimen/activity_margin"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingEnd="@dimen/activity_margin"
    android:paddingBottom="@dimen/spacing_medium">

    <androidx.cardview.widget.CardView
        android:id="@+id/movie_list_card"
        android:layout_width="@dimen/image_poster_width"
        android:layout_height="@dimen/image_poster_height"
        android:layout_marginEnd="@dimen/spacing_large"
        android:clipToPadding="true"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintEnd_toStartOf="@id/movie_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/movie_list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc_movies_poster"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_list_title"
        style="@style/MovieTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/movie_list_card"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/movie_list_orig_title"
        style="@style/MovieSubtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movie_list_title"
        app:layout_constraintTop_toBottomOf="@id/movie_list_title"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/movie_list_overview"
        style="@style/MovieCaptionTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/grey_40"
        app:layout_constraintBottom_toTopOf="@+id/movie_list_release_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movie_list_title"
        app:layout_constraintTop_toBottomOf="@id/movie_list_orig_title"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/movie_list_release_date"
        style="@style/MovieCaptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/grey_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movie_list_title"
        tools:text="14.05.2015" />

    <TextView
        android:id="@+id/movie_list_rating"
        style="@style/MovieCaptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="2"
        android:textColor="@color/grey_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="8.1 (2945)" />

    <ImageView
        android:id="@+id/movie_list_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_movies_bookmark"
        android:src="@drawable/ic_bookmark_poster"
        app:layout_constraintStart_toStartOf="@id/movie_list_card"
        app:layout_constraintTop_toTopOf="@id/movie_list_card" />

</androidx.constraintlayout.widget.ConstraintLayout>